  <% book.book_comment.each do |comment| %>
    <table>
      <tr>
        <td>
        <%= link_to user_path(comment.user.id) do %>
          <%= image_tag comment.user.get_profile_image, size:"100x100" %><br>
          <%= comment.user.name %>
        <% end %>
        </td>
        <td><%= comment.body %></td>
        <% if comment.user == current_user %>
          <td><%= link_to "Destroy", book_book_comment_path(comment.book, comment), method: :delete, class: "btn btn-danger" %></td>
        <% end %>
      </tr>
    </table>
  <% end %>

  <%= form_with model: book.book_comment, url: book_book_comments_path(book) do |f| %>
    <div>
      <%= f.text_area :body, class: "form-control" %>
      <%= f.submit '送信' , class: "mt-3"%>
    </div>
  <% end %>